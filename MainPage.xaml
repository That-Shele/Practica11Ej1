    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="cambio.jpg"
                HeightRequest="185"
                WidthRequest="200"
                Aspect="AspectFit"
                />

            <Entry Placeholder="Ingrese el costo del artículo"
                   HorizontalOptions="Center"
                   WidthRequest="400"
                   x:Name="eCosto"/>

            <Entry Placeholder="Ingrese el pago"
                   HorizontalOptions="Center"
                   WidthRequest="400"
                   x:Name="ePago"/>

            <Entry Placeholder="Cambio"
                   HorizontalOptions="Center"
                   WidthRequest="400"
                   x:Name="eCambio"/>

            <Button
                x:Name="CounterBtn"
                Text="Calcular cambio" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Center"
                WidthRequest="350"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
